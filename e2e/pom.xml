<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.extendedmind</groupId>
    <artifactId>root</artifactId>
    <version>0-SNAPSHOT</version>
  </parent>
  <artifactId>e2e</artifactId>
  <packaging>pom</packaging>
  <name>Extended Mind :: End-to-end Tests </name>
  <description>Extended Mind End-to-end Tests</description>
  <url>https://github.com/extendedmind/extendedmind</url>
  <inceptionYear>2013</inceptionYear>

  <licenses>
    <license>
      <name>GNU Affero General Public License, Version 3</name>
      <url>http://www.gnu.org/licenses/agpl-3.0.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:extendedmind/extendedmind.git</connection>
    <developerConnection>scm:git:git@github.com:extendedmind/extendedmind.git</developerConnection>
    <url>git@github.com:extendedmind/extendedmind.git</url>
  </scm>

  <developers>
    <developer>
      <id>ttiurani</id>
      <name>Timo Tiuraniemi</name>
      <email>timo.tiuraniemi@iki.fi</email>
    </developer>
    <developer>
      <id>jpsalo</id>
      <name>JP Salo</name>
      <email>jukapeka@gmail.com</email>
    </developer>
    <developer>
      <id>il0</id>
      <name>Tuomas Saarela</name>
      <email>tuomas.saarela@iki.fi</email>
    </developer>
  </developers>

  <dependencies>

    <dependency>
      <groupId>org.extendedmind</groupId>
      <artifactId>backend</artifactId>
      <type>test-jar</type>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.extendedmind.frontend</groupId>
      <artifactId>frontend-core</artifactId>
      <type>war</type>
      <scope>compile</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.extendedmind</groupId>
                  <artifactId>backend</artifactId>
                  <type>test-jar</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}</outputDirectory>
                  <includes>*.zip, testData.properties</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>copy</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.extendedmind.frontend</groupId>
                  <artifactId>frontend-core</artifactId>
                  <type>war</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>unzip-database</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target name="unzip-database">
                <unzip src="target/neo4j-test.zip" dest="target/neo4j-test" />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>${jetty.version}</version>
        <executions>
          <execution>
            <id>deploy-war</id>
            <goals>
              <goal>deploy-war</goal>
            </goals>
            <configuration>
              <daemon>true</daemon>
              <reload>manual</reload>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <stopKey>testKey</stopKey>
          <stopPort>9999</stopPort>
          <war>${project.build.directory}/frontend-core-${project.version}.war</war>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-http</artifactId>
            <version>${jetty.version}</version>
            <type>jar</type>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-rewrite</artifactId>
            <version>${jetty.version}</version>
            <type>jar</type>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.jolokia</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <images>
            <image>
              <name>extendedmind/mongodb-conf</name>
              <alias>mongodb-conf</alias>
            </image>
            <image>
              <name>extendedmind/backend-conf</name>
              <alias>backend-conf</alias>
            </image>
            <image>
              <name>extendedmind/nginx-conf</name>
              <alias>nginx-conf</alias>
            </image>
            <image>
              <name>extendedmind/cube-conf</name>
              <alias>cube-conf</alias>
            </image>
            <image>
              <name>extendedmind/confd</name>
              <alias>confd</alias>
              <run>
                <env>
                  <EXTENDEDMIND_BACKEND_TOKENSECRET>01234567890123456789012345678901</EXTENDEDMIND_BACKEND_TOKENSECRET>
                  <EXTENDEDMIND_BACKEND_SIGNUPMODE>BETA</EXTENDEDMIND_BACKEND_SIGNUPMODE>
                  <EXTENDEDMIND_BACKEND_MAILGUNKEY>TEST KEY</EXTENDEDMIND_BACKEND_MAILGUNKEY>
                  <EXTENDEDMIND_BACKEND_MAILGUNDOMAIN>ext.md</EXTENDEDMIND_BACKEND_MAILGUNDOMAIN>
                  <EXTENDEDMIND_EMAILFROM>extended mind &lt;support@ext.md&gt;</EXTENDEDMIND_EMAILFROM>
                  <EXTENDEDMIND_URLPREFIX>http://localhost/landing/</EXTENDEDMIND_URLPREFIX>
                  <EXTENDEDMIND_SECUREURLPREFIX>http://localhost/</EXTENDEDMIND_SECUREURLPREFIX>
                  <!-- test login admin:adminpwd for /evaluate -->
                  <EXTENDEDMIND_EVALUATECREDENTIALS>admin:$apr1$iRuCzNe7$wGTyTAez42hHC9rGP6CHg.</EXTENDEDMIND_EVALUATECREDENTIALS>
                </env>
                <volumes>
                  <from>
                    <image>backend-conf</image>
                    <image>mongodb-conf</image>
                    <image>nginx-conf</image>
                    <image>cube-conf</image>
                  </from>
                </volumes>
                <cmd>/usr/src/confd -backend=env</cmd>
              </run>
            </image>
            <image>
              <name>extendedmind/mongodb-data</name>
              <alias>mongodb-data</alias>
            </image>
            <image>
              <name>extendedmind/mongodb</name>
              <alias>mongodb</alias>
              <run>
                <volumes>
                  <from>
                    <image>mongodb-conf</image>
                    <image>mongodb-data</image>
                  </from>
                </volumes>
              </run>
            </image>
            <image>
              <name>extendedmind/backend-data</name>
              <alias>backend-data</alias>
            </image>
            <image>
              <name>extendedmind/backend</name>
              <alias>backend</alias>
              <run>
                <volumes>
                  <from>
                    <image>backend-conf</image>
                    <image>backend-data</image>
                  </from>
                </volumes>
                <links>
                  <link>mongodb:mongodb</link>
                </links>
              </run>
            </image>
            <image>
              <name>extendedmind/frontend-data</name>
              <alias>frontend-data</alias>
            </image>
            <image>
              <name>extendedmind/frontend</name>
              <alias>frontend</alias>
              <run>
                <volumes>
                  <from>
                    <image>frontend-data</image>
                  </from>
                </volumes>
              </run>
            </image>
            <image>
              <name>extendedmind/cube-evaluator</name>
              <alias>cube-evaluator</alias>
              <run>
                <volumes>
                  <from>
                    <image>cube-conf</image>
                  </from>
                </volumes>
                <links>
                  <link>mongodb:mongodb</link>
                </links>
              </run>
            </image>
            <image>
              <name>extendedmind/cube-collector</name>
              <alias>cube-collector</alias>
              <run>
                <volumes>
                  <from>
                    <image>cube-conf</image>
                  </from>
                </volumes>
                <links>
                  <link>mongodb:mongodb</link>
                </links>
              </run>
            </image>
            <image>
              <name>extendedmind/nginx</name>
              <alias>nginx</alias>
              <run>
                <volumes>
                  <from>
                    <image>nginx-conf</image>
                    <image>frontend</image>
                  </from>
                </volumes>
                <links>
                  <link>backend:backend</link>
                  <link>cube-evaluator:evaluator</link>
                  <link>cube-collector:collector</link>
                </links>
                <ports>
                  <port>591:591</port>
                  <port>8008:8008</port>
                </ports>
              </run>
            </image>
            <image>
              <name>extendedmind/backend-backup</name>
              <alias>backend-backup</alias>
              <run>
                <links>
                  <link>backend:backend</link>
                </links>
              </run>
            </image>
          </images>
        </configuration>
        <executions>
          <execution>
             <id>start-docker</id>
             <phase>pre-integration-test</phase>
             <goals>
               <goal>start</goal>
             </goals>
          </execution>
          <execution>
             <id>stop-docker</id>
             <phase>post-integration-test</phase>
             <goals>
               <goal>stop</goal>
             </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
