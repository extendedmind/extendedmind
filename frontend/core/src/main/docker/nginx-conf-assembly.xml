<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/docker</directory>
      <outputDirectory>nginx/sites-enabled</outputDirectory>
      <includes>
        <include>nginx.extendedmind.conf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/docker</directory>
      <!-- not actually a template but moved with nginx-run.sh to /etc/nginx -->
      <outputDirectory>confd/templates/nginx</outputDirectory>
      <includes>
        <include>nginx.conf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/docker</directory>
      <outputDirectory>confd/conf.d/nginx</outputDirectory>
      <includes>
        <include>evaluate.htpasswd.toml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/docker</directory>
      <outputDirectory>confd/templates/nginx</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>evaluate.htpasswd.tmpl</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
