
<project xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.extendedmind</groupId>
    <artifactId>frontend</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>
  <groupId>org.extendedmind.frontend</groupId>
  <artifactId>core</artifactId>
  <name>Extended Mind :: Frontend :: Core</name>
  <description>Extended Mind Frontend Core</description>
  <inceptionYear>2013</inceptionYear>
  <licenses>
    <license>
       <name>GNU Affero General Public License, Version 3</name>
      <url>http://www.gnu.org/licenses/agpl-3.0.html</url>
      <distribution>repo</distribution>
    </license>  
  </licenses>

  <build>
    <plugins>
      <plugin>
        <groupId>ro.isdc.wro4j</groupId>
        <artifactId>wro4j-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>wro4j-devel</id>
            <phase>process-sources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <minimize>false</minimize>
              <targetGroups>em-devel</targetGroups>
              <extraConfigFile>${basedir}/config/wro-devel.properties</extraConfigFile>
            </configuration>
          </execution>
          <execution>
            <id>wro4j-production</id>
            <phase>compile</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <targetGroups>em-min</targetGroups>
              <extraConfigFile>${basedir}/config/wro-min.properties</extraConfigFile>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <destinationFolder>${project.build.directory}/generated-sources/</destinationFolder>
          <contextFolder>${basedir}/src/main/</contextFolder>
          <wroFile>${basedir}/config/wro.xml</wroFile>
          <wroManagerFactory>ro.isdc.wro.maven.plugin.manager.factory.ConfigurableWroManagerFactory</wroManagerFactory>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
