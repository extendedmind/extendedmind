{
  "name": "extended-mind",
  "version": "${project.version.node}",
  "description": "Extended Mind Desktop",
  "private": true,
  "dependencies": {
    "electron-prebuilt": "^0.31.2",
    "electron-packager": "^5.0.2",
    "electron-builder": "^2.0.0"
  },
  "scripts": {
    "dev": "./node_modules/.bin/electron ./app",

    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",

    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager ./app \"extended mind\" --out=dist/osx --platform=darwin --arch=x64 --version=0.31.2 --app-version=${project.version.node} --icon=assets/osx/icon.icns --sign=\"${settings.servers.osx-developer-certificate.username}\"",
    "build:win": "npm run clean:win && electron-packager ./app \"extended mind\" --out=dist/win --platform=win32 --arch=ia32 --version=0.31.2 --app-version=${project.version.node} --icon=assets/win/icon.ico",

    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "npm run build:osx && electron-builder \"dist/osx/extended mind-darwin-x64/extended mind.app\" --platform=osx --out=\"dist/osx\" --config=packager.json",
    "pack:win": "npm run build:win && electron-builder \"dist/win/extended mind-win32-ia32\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "keywords": [
    "productivity"
  ],
  "author": "Timo Tiuraniemi",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/extendedmind/extendedmind/issues"
  },
  "homepage": "https://ext.md"
}
