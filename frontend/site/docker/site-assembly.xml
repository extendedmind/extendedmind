<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src</directory>
      <outputDirectory>app/site</outputDirectory>
      <includes>
        <include>package.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/dist</directory>
      <outputDirectory>app/site/dist</outputDirectory>
      <includes>
        <include>**/*.js</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/docker</directory>
      <outputDirectory>app/site</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>site-config.json</include>
        <include>site-pm2.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/node_modules</directory>
      <outputDirectory>app/site/node_modules</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/views</directory>
      <outputDirectory>app/site/views</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/docker</directory>
      <outputDirectory>etc/nginx/sites-enabled/site</outputDirectory>
      <includes>
        <include>nginx.extendedmind.conf</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
