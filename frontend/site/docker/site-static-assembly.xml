<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <dependencySets>
    <dependencySet>
      <outputDirectory>extendedmind</outputDirectory>
      <includes>
        <include>org.extendedmind.frontend:frontend-app:war:${project.version}</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
          <exclude>WEB-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <outputDirectory>extendedmind/analytics</outputDirectory>
      <includes>
        <include>org.extendedmind.frontend:frontend-analytics:jar:${project.version}</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/static</directory>
      <outputDirectory>extendedmind/static</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
